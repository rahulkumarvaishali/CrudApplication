@model CrudApp.Models.LoginClass
@{
    ViewBag.Title = "AddUser";
}
<style>
    .err{
        color:#fe0404;
    }
</style>
<h2>AddUser</h2>

@using (Html.BeginForm("AddUser", "Home", FormMethod.Post))
            {
                <div class="form-group ">
                    <label>Name</label>
                    @Html.TextBoxFor(m => m.Name, new {@class= "form-control",@placeholder="Please Enter Your Name",data_val="true",data_val_required="Rlease Enter The valid input" })
                    @Html.ValidationMessageFor(m => m.Name, "", new {@class="err"})
                </div>

                <div class="form-group ">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.Email, new {@class= "form-control",@placeholder="Please Enter Your Email",data_val="true",data_val_required="Rlease Enter The valid input" })
                    @Html.ValidationMessageFor(m => m.Email, "", new {@class="err"})
                </div>

                <div class="form-group ">
                    <label>Password</label>
                    @Html.TextBoxFor(m => m.Password, new {@class= "form-control",@placeholder="Please Enter Your Password",data_val="true",data_val_required="Rlease Enter The valid input" })
                    @Html.ValidationMessageFor(m => m.Password, "", new {@class="err"})
                </div>
                <button class="btn btn-success"type="submit">Create</button>
                <button class="btn btn-danger"type="reset">Reset</button>
            }