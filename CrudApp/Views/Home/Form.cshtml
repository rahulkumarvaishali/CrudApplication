@model CrudApp.Models.Test
@{
    ViewBag.Title = "Form";
}
<style>
    .er{
        color:#fa0404;
    }
</style>
<h2>Form</h2>

@using(Html.BeginForm("Form","Home",FormMethod.Post))
            {
    @Html.HiddenFor(m=>m.Id)
                <div class="form-group ">
                    <label>Name</label>
                    @Html.TextBoxFor(m=>m.Name,new {@class= "form-control", @Placeholde="Please Enter Name", data_val="true",data_val_required="Please Enter Valid Input" })
                    @Html.ValidationMessageFor(m => m.Name, "", new {@class="er"})

                </div><div class="form-group ">
                          <label>Email</label>
                    @Html.TextBoxFor(m=>m.Email, new {@class= "form-control", @Placeholde= "Please Enter Email", data_val="true",data_val_required="Please Enter Valid Input" })
                    @Html.ValidationMessageFor(m => m.Email, "", new {@class="er"})

                </div><div class="form-group ">
                          <label>Mobile</label>
                    @Html.TextBoxFor(m=>m.Mobile, new {@class= "form-control", @Placeholde= "Please Enter Mobile", data_val="true",data_val_required="Please Enter Valid Input" })
                    @Html.ValidationMessageFor(m => m.Mobile, "", new {@class="er"})

                </div><div class="form-group ">
                          <label>Salary</label>
                    @Html.TextBoxFor(m=>m.Salary, new {@class= "form-control", @Placeholde= "Please Enter Salary", data_val="true",data_val_required="Please Enter Valid Input" })
                    @Html.ValidationMessageFor(m => m.Salary, "", new {@class="er"})

                </div><div class="form-group ">
                          <label>Address</label>
                    @Html.TextBoxFor(m=>m.Address, new {@class= "form-control", @Placeholde= "Please Enter Address", data_val="true",data_val_required="Please Enter Valid Input" })
                    @Html.ValidationMessageFor(m => m.Address, "", new {@class="er"})

                </div>
                <button class="btn btn-success" type="submit">Submit</button>
            }