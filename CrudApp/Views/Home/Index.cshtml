@model List<CrudApp.Models.Test>
@{
    ViewBag.Title = "Home Page";
}

<table class="table table-bordered table-responsive">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Salary</th>
        <th>Address</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.Salary</td>
            <td>@item.Address</td>
            <td><a href="@Url.Action("Delete","Home", new {item.Id}) "class="btn btn-danger">Delete</a></td>
            <td><a href="@Url.Action("Form","Home", new {item.Id}) "class="btn btn-success">Add-Data</a></td>
            <td><a href="@Url.Action("Edit","Home", new {item.Id}) "class="btn btn-primary">Edit</a></td>
        </tr>
    }

</table>
